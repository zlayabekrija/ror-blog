<div class="my-3">
<%= render './layouts/buttons' %>
<%= link_to fa_icon('chevron-left',text:'Back'), articles_path,class:'float-left btn btn-default' %>
<% if logged_in? %>
<%= link_to fa_icon('edit',text:'Edit'), edit_article_path(@article),class: 'float-left btn btn-warning'%>
<% end %>
<div class="clearfix">
</div>
</div>
<div class="card">
<div class="card-body">
<h3><strong><%= @article.title %></strong>
</h3>
 <p> <%= @article.text %>
</p>
</div>
</div>
<h4 class="text-center mt-3">Comments</h4>
 <div class="card w-75 m-auto">
  <%= render @article.comments %>
 </div>
 <div class="container mt-3 w-75 m-auto">
<h4 class="mt-3">Add a comment:</h4>
<%= render 'comments/form' %>
 </div>
